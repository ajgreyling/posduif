# Posduif Production Environment Variables
# DO NOT COMMIT THIS FILE - Contains sensitive information

# Database Configuration
POSTGRES_HOST={{ postgres_host }}
POSTGRES_PORT={{ postgres_port | default(5432) }}
POSTGRES_USER={{ postgres_user }}
POSTGRES_PASSWORD={{ postgres_password }}
POSTGRES_DB={{ postgres_db }}

# Redis Configuration
REDIS_HOST={{ redis_host }}
REDIS_PORT={{ redis_port | default(6379) }}
REDIS_PASSWORD={{ redis_password | default('') }}

# Sync Engine Configuration
SSE_PORT={{ sse_port | default(8080) }}
JWT_SECRET={{ jwt_secret }}

# Logging
LOG_LEVEL={{ log_level | default('info') }}



